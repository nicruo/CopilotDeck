@using Htmx
@{
    @if (!Context.Request.IsHtmx() || Context.Request.IsHtmxHistoryRestoreRequest())
    {
        Context.Response.Headers.Add("Vary", "HX-Request");
        Layout = "_Layout";

    }
    else if (Context.Request.IsHtmxBoosted())
    {
        Context.Response.Headers.Add("Vary", "HX-Request");
        Layout = "_LayoutHtmxBoosted";
    }
    else
    {
        Context.Response.Headers.Add("Vary", "HX-Request");
        Layout = null;
    }
}